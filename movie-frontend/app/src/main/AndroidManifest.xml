<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Cinema"
        tools:targetApi="31">
        <activity
            android:name=".view.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.MainAccountActivity"
            android:exported="false" />
        <activity
            android:name=".view.BookedTicketActivity"
            android:exported="false" />
        <activity android:name=".view.BookTicketActivity"/>
        <activity android:name=".view.EditAccountActivity" />
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.ChangePasswordActivity" />
        <activity android:name=".view.MovieDetailActivity" />
        <activity android:name=".view.PaymentActivity"/>
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>